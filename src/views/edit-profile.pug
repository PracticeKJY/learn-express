extends component/base

block content
    if errorMessage
        span=errorMessage
        //- 파일업로드를 위해서는 form에 enctype="multipart/form-data 속성추가필요
        //- accept : 허용하는 파일의 형태. 
        //- https://www.tcpschool.com/html-tag-attrs/input-accept


    img(src="/" + loggedInUser.avatarUrl, width="100", height="100", alt="회원 대표이미지")
    form(method="POST", enctype="multipart/form-data")
        label(for="avatar") Avatar
        input(type="file", id="avrtar" name="avatar", accept="image/*")             
        input(placeholder="name" name="name" type="text" value=loggedInUser.name required)
        input(placeholder="email" name="email" type="text" value=loggedInUser.email required)
        input(placeholder="username" name="username" type='text' value=loggedInUser.username required)
        input(placeholder="location" name="location" type="text" value=loggedInUser.location required)
        input(type="submit" value="Update profile")
        if !loggedInUser.socialOnly
            hr
            a(href="change-password") 비밀번호 변경 &rarr;


